<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-3">
    <div class="card">
      <img class="card-img-top" src="<%= @profile.profile_pic %>"  
      alt="Card image cap" class="img-fluid" height="250" width="250">
      <div class="card-block">
        <h4 class="card-title"><%= @profile.fullname %></h4>
        <p class="card-text"><%= @profile.bio %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Date of Birth: <%= @profile.dob.strftime("%d %B %Y") %></li>
        <li class="list-group-item">Email: <%= @profile.user.email %></li>
        <li class="list-group-item">Phone: <%= @profile.phone %></li>
        <li class="list-group-item">Gender: <%= @profile.gender %></li>
        <li class="list-group-item">Country: <%= ISO3166::Country[@profile.country] %></li>
      </ul>
      </ul>
      <div class="card-block">
      <% if @profile.user.id == current_user.id %>
        <%= link_to 'Edit', edit_profile_path(@profile), class: 'btn btn-primary' %> 
        <%= puts @profile %>
      <% end %>
      </div>
    </div>
  </div>
</div>






